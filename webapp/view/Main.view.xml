<mvc:View
    controllerName="bs.ui5.projeto.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    displayBlock="true">

    <Page id="mainPage" title="{i18n>appTitle}" backgroundDesign="List">
        <headerContent>
            <Button 
                id="aboutBtn" 
                icon="sap-icon://message-information" 
                type="Transparent"
                press="onOpenAbout"/>
        </headerContent>

        <subHeader>
            <OverflowToolbar>
                <SearchField 
                    id="search"
                    width="auto"
                    placeholder="{i18n>searchPlaceholder}"
                    liveChange="onSearch">
                    <layoutData>
                        <OverflowToolbarLayoutData priority="NeverOverflow" />
                    </layoutData>
                </SearchField>
                <ToolbarSpacer />
                <Select
                    id="sortSelect"
                    icon="sap-icon://sort"
                    change="onSortChange">
                    <items>
                        <core:Item key="discAsc"  text="{i18n>sortBy.discAsc}"/>
                        <core:Item key="discDesc" text="{i18n>sortBy.discDesc}"/>
                    </items>
                </Select>
            </OverflowToolbar>
        </subHeader>

        <content>
            <List
                id="disciplinesList"
                items="{path: '/Disciplinas'}"
                class="sapUiResponsiveMargin customListStyle"
                width="auto">
                <ObjectListItem
                    title="{nome}"
                    type="Navigation"
                    icon="sap-icon://folder"
                    class="boldFolderIcon"
                    press="onDiscPress">

                    <attributes>
                        <ObjectAttribute
                            active="false"
                            class="resourceCountAttr"
                            text="{
                                parts: [{path: 'recursos'}, {path: 'i18n>resourceCount'}, {path: 'i18n>resourceCountSingular'}],
                                formatter: '.formatter.formatResourceCount'
                            }"/>
                    </attributes>

                </ObjectListItem>
            </List>
        </content>
    </Page>
</mvc:View>
