<mvc:View
    controllerName="bs.ui5.projeto.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    displayBlock="true">

    <Page id="mainPage" title="{i18n>appTitle}" titleStyle="H3" backgroundDesign="List">
        <headerContent>
            <Button 
                id="aboutBtn" 
                icon="sap-icon://message-information" 
                type="Transparent"
                press="onOpenAbout"/>
        </headerContent>

        <subHeader>
            <OverflowToolbar>
                <SearchField 
                    id="search"
                    width="auto"
                    placeholder="{i18n>searchPlaceholder}"
                    liveChange="onSearch">
                    <layoutData>
                        <OverflowToolbarLayoutData priority="NeverOverflow" />
                    </layoutData>
                </SearchField>
                <ToolbarSpacer />
                <Select
                    id="sortSelect"
                    icon="sap-icon://sort"
                    change="onSortChange">
                    <items>
                        <core:Item key="discAsc"  text="{i18n>sortBy.discAsc}"/>
                        <core:Item key="discDesc" text="{i18n>sortBy.discDesc}"/>
                    </items>
                </Select>
            </OverflowToolbar>
        </subHeader>

        <content>
            <List
                id="disciplinesList"
                items="{path: '/Disciplinas'}"
                class="sapUiResponsiveMargin customListStyle"
                width="auto">
                <ObjectListItem
                    title="{nome}"
                    number="{
                        parts: ['recursos', 'i18n>resourceCount', 'i18n>resourceCountSingular'],
                        formatter: '.formatter.formatResourceCount'
                    }"
                    numberUnit=""
                    type="Navigation"
                    icon="sap-icon://education"
                    press="onDiscPress" />
            </List>
        </content>
    </Page>
</mvc:View>
