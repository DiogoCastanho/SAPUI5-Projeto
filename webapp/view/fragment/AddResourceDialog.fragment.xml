<core:FragmentDefinition 
    xmlns="sap.m" 
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">
    <Dialog
        title="{i18n>addResource}"
        contentWidth="28rem"
        draggable="true">
        <content>
            <f:SimpleForm
                editable="true"
                layout="ColumnLayout">
                <f:content>
                    <Label text="{i18n>field.title}" required="true" />
                    <Input id="newResTitle" placeholder="{i18n>dialogTitle}" />

                    <Label text="{i18n>field.type}" />
                    <Select id="newResType" width="100%">
                        <items>
                            <core:Item key="Livro" text="Livro" />
                            <core:Item key="Vídeo" text="Vídeo" />
                            <core:Item key="Artigo" text="Artigo" />
                        </items>
                    </Select>

                    <Label text="{i18n>field.url}" required="true" />
                    <Input id="newResUrl" type="Url" placeholder="{i18n>dialogUrl}" />

                    <Label text="{i18n>field.description}" />
                    <TextArea id="newResDescription" rows="2" placeholder="{i18n>dialogDescription}" />

                    <Label text="{i18n>field.mandatory}" />
                    <CheckBox id="newResMandatory" text="{i18n>dialogCheckBox}" />
                </f:content>
            </f:SimpleForm>
        </content>
        <beginButton>
            <Button text="{i18n>save}" type="Emphasized" press=".onAddResourceSave" />
        </beginButton>
        <endButton>
            <Button text="{i18n>cancel}" press=".onAddResourceCancel" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>