<mvc:View
    controllerName="bs.ui5.projeto.controller.Detail"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.uxap"
    xmlns:m="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout"
    height="100%">
    <ObjectPageLayout id="ObjectPageLayout" showTitleInHeaderContent="true">
        
        <headerTitle>
            <ObjectPageDynamicHeaderTitle>
                <expandedHeading>
                    <m:HBox>
                        <m:Title text="{titulo}" wrapping="true" />
                    </m:HBox>
                </expandedHeading>

                <snappedHeading>
                    <m:FlexBox alignItems="Center">
                        <m:Title text="{titulo}" wrapping="true" />
                    </m:FlexBox>
                </snappedHeading>

                <actions>
                    <m:Button text="{i18n>btnBack}" icon="sap-icon://nav-back" press="onNavBack" tooltip="{i18n>back}" />
                </actions>
            </ObjectPageDynamicHeaderTitle>
        </headerTitle>

        <headerContent>
            <m:FlexBox wrap="Wrap">
                <layout:VerticalLayout class="sapUiSmallMarginEnd">
                    <m:Label text="{i18n>codeLabel}" />
                    <m:Text text="{i18n>labelCode}" />
                </layout:VerticalLayout>

                <layout:VerticalLayout class="sapUiSmallMarginEnd">
                    <m:Label text="{i18n>workloadLabel}" />
                    <m:Text text="{i18n>workloadLabelT}" />
                </layout:VerticalLayout>

                <layout:VerticalLayout>
                    <m:Label text="{i18n>typeLabel}" />
                    <m:ObjectStatus text="{tipo}" state="Information" />
                </layout:VerticalLayout>
            </m:FlexBox>
        </headerContent>

        <sections>
            <ObjectPageSection titleUppercase="false" title="{i18n>sectionGeneral}">
                <subSections>
                    <ObjectPageSubSection>
                        <blocks>
                            <f:SimpleForm editable="false" layout="ColumnLayout">
                                <f:content>
                                    <m:Label text="{i18n>labelDescription}" />
                                    <m:Text text="{descricao}" />
                                    
                                    <m:Label text="{i18n>labelMandatory}" />
                                    <m:CheckBox selected="{obrigatorio}" editable="false" />
                                    
                                    <m:Label text="{i18n>labelDepartment}" />
                                    <m:Text text="{i18n>labelDepartmentN}" />
                                </f:content>
                            </f:SimpleForm>
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>

            <ObjectPageSection titleUppercase="false" title="{i18n>sectionFaculty}">
                <subSections>
                    <ObjectPageSubSection>
                        <blocks>
                            <m:List headerText="{i18n>listFacultyHeader}">
                                <m:StandardListItem 
                                    title="{i18n>listFacultyTitle}" 
                                    description="{i18n>listFacultyDescription}" 
                                    icon="sap-icon://employee" />
                            </m:List>
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>

            <ObjectPageSection titleUppercase="false" title="{i18n>sectionResources}">
                <subSections>
                    <ObjectPageSubSection>
                        <blocks>
                            <m:Table>
                                <m:columns>
                                    <m:Column><m:Text text="{i18n>tableTitleBooks}" /></m:Column>
                                    <m:Column><m:Text text="{i18n>tableAuthor}" /></m:Column>
                                    <m:Column minScreenWidth="Tablet" demandPopin="true"><m:Text text="{i18n>tableLink}" /></m:Column>
                                </m:columns>
                                <m:items>
                                    <m:ColumnListItem>
                                        <m:cells>
                                            <m:Text text="{i18n>resourcesName}" />
                                            <m:Text text="{i18n>resourcesT}" />
                                            <m:Link text="{i18n>tableLink}" target="_blank" />
                                        </m:cells>
                                    </m:ColumnListItem>
                                </m:items>
                            </m:Table>
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
        </sections>

        <footer>
            <m:OverflowToolbar>
                <m:ToolbarSpacer />
                <m:Button type="Accept" text="{i18n>btnEnroll}"/>
                <m:Button type="Transparent" text="{i18n>btnExport}"/>
            </m:OverflowToolbar>
        </footer>

    </ObjectPageLayout>
</mvc:View>